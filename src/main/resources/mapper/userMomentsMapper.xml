<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzd.giligili.dao.UserMomentsDao">

    <resultMap id="BaseResultMap" type="com.zzd.giligili.domain.UserMoments">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="userId" column="userId" jdbcType="BIGINT"/>
            <result property="type" column="type" jdbcType="VARCHAR"/>
            <result property="contentId" column="contentId" jdbcType="BIGINT"/>
            <result property="createTime" column="createTime" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,userId,type,
        contentId,createTime,updateTime
    </sql>
    <insert id="addUserMoments" parameterType="com.zzd.giligili.domain.UserMoments"
            useGeneratedKeys="true" keyProperty="id">
        insert into
            t_user_moments(
                userId,
                `type`,
                contentId,
                createTime
            ) values (
                #{userId},
                #{type},
                #{contentId},
                #{createTime}
            )
    </insert>


</mapper>
